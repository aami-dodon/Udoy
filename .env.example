# Server configuration
NODE_ENV=development
SERVER_PORT=6005
API_PREFIX=/api
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-me-please
PRISMA_LOG_QUERIES=false

# PostgreSQL connection string
DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST:5432/DATABASE_NAME
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# MinIO connection details
MINIO_ENDPOINT=minio.example.com
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=minio-access-key
MINIO_SECRET_KEY=minio-secret-key
MINIO_REGION=
MINIO_BUCKET=udoy-bucket
MINIO_PUBLIC_BASE_URL=https://cdn.example.com
MINIO_FORCE_SIGNED_DOWNLOADS=false
VITE_MINIO_PUBLIC_BASE_URL=https://cdn.example.com
VITE_MINIO_FORCE_SIGNED_DOWNLOADS=false

# Authentication
JWT_ACCESS_SECRET=replace-with-access-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# Email / SMTP
EMAIL_FROM=notifications@example.com
EMAIL_VERIFICATION_URL=http://localhost:6004/verify-email
PASSWORD_RESET_URL=http://localhost:6004/reset-password
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_USER=notifications@example.com
EMAIL_SMTP_PASS=replace-with-smtp-password

# Cross-origin resource sharing
CORS_ALLOWED_ORIGINS=http://localhost:6004

# Client configuration
CLIENT_PORT=6004
CLIENT_ALLOWED_HOSTS=localhost
VITE_API_URL=http://localhost:6005/api
VITE_SUPPORT_EMAIL=support@example.com
